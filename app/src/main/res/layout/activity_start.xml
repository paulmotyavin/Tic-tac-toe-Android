<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    style="@style/backgroundTheme"
    tools:context=".StartActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            style="@style/mainCard"
            android:background="@drawable/lavender_border">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ВВЕДИТЕ\nИМЯ"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                style="@style/Base.Theme.Themes"/>

            <EditText
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:maxLines="1"
                android:textStyle="italic"
                android:hint="Введите имя игрока"
                style="@style/Base.Theme.Themes"
                android:drawableLeft="@drawable/ic_xicon"
                android:drawablePadding="8dp"/>

            <EditText
                android:id="@+id/playerTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:maxLines="1"
                android:textStyle="italic"
                android:hint="Введите имя игрока"
                style="@style/Base.Theme.Themes"
                android:drawableLeft="@drawable/ic_oicon"
                android:drawablePadding="8dp"/>
            
            <Button
                android:id="@+id/startGameButtonTwo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:text="Начать игру (2 игрока)"
                style="@style/Base.Theme.Themes"
                android:drawableRight="@drawable/ic_duel"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/startGameButtonBot"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                style="@style/Base.Theme.Themes"
                android:layout_marginTop="10dp"
                android:text="Начать игру (игра с ботом)"
                android:drawableRight="@drawable/ic_bot"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>