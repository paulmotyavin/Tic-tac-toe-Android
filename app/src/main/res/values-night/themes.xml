<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Themes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/buttons</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text1</item>


    </style>

    <style name="backgroundTheme" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:background">@drawable/bglight</item>
    </style>

    <style name="mainCard" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:backgroundTint">@color/card</item>
    </style>

    <style name="cardArea" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:backgroundTint">@color/cardArea</item>
    </style>

    <style name="statistics" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:textColor">@color/textStat</item>
        <item name="colorPrimaryVariant">@color/buttons</item>
    </style>

    <style name="backgroundStat" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:background">@color/hint</item>
    </style>

</resources>